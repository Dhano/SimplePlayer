<AnchorPane fx:id="rootPanel" prefHeight="600.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.ui.pages.StartPage">
  <children>

    <!--Start of Main panel-->
    <Label layoutX="50.0" layoutY="45.0" prefHeight="60.0" prefWidth="299.0" text="Music Player" textAlignment="CENTER" wrapText="false">
      <font>
        <Font name="Arial" size="20.0" />
      </font>
    </Label>
    <Button fx:id="btn_Start" layoutX="115.0" layoutY="216.0" mnemonicParsing="false" onAction="#showSongsList" prefHeight="169.0" prefWidth="169.0" text="">
      <font>
        <Font size="75.0" />
      </font>
      <graphic>
        <Glyph fontFamily="FontAwesome" icon="MUSIC" fontSize="80" textFill="darkred"/>
      </graphic>
    </Button>
    <!--End of Main panel-->

    <!--Start of SongsListPanel-->
    <AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:id="songsListPanel">
      <children>
        <ListView fx:id="songsList" layoutX="14.0" layoutY="41.0" prefHeight="547.0" prefWidth="372.0" />
        <Button  fx:id="btn_Close" layoutX="360.0" layoutY="8.0" mnemonicParsing="false" onAction="#hideSongsList" prefHeight="27.0" prefWidth="27.0" text="" >
          <graphic>
            <Glyph fontFamily="FontAwesome" icon="CLOSE" fontSize="15"/>
          </graphic>
        </Button>
      </children>
    </AnchorPane>
    <!--End of SongsListPanel-->

    <!--Start of PlayingPanel-->
    <AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:id="playingPanel">
      <children>
        <Slider layoutX="60.0" layoutY="506.0" prefHeight="17.000099999997474" prefWidth="279.0000999999975" fx:id="progressSlider"/>
        <Button layoutX="89.0" layoutY="542.0" mnemonicParsing="false" text="Previous" fx:id="btn_Previous"/>
        <Button layoutX="255.0" layoutY="542.0" mnemonicParsing="false" text="Next" fx:id="btn_Next"/>
        <Button layoutX="172.0" layoutY="542.0" mnemonicParsing="false" text="Play" fx:id="btn_Play"/>
        <Button layoutX="330.0" layoutY="21.0" mnemonicParsing="false" text="Close" fx:id="btn_Close_Playing" onAction="#hidePlayingPanel"/>
        <Slider layoutX="33.0" layoutY="300.0" orientation="VERTICAL" prefHeight="140.0" prefWidth="42.0" fx:id="volumeSlider"/>
        <Label layoutX="40.0" layoutY="252.0" prefHeight="33.0" text="Label" fx:id="volumeLabel">
        </Label>
      </children>
    </AnchorPane>
    <!--End of PlayingPanel-->

  </children>
</AnchorPane>
